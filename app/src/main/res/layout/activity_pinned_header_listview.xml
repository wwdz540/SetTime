<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/select_city_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0f0f0"
    tools:ignore="ContentDescription,UselessParent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/city_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0px" >

            <com.winhands.extraview.PinnedHeaderListView
                android:id="@+id/citys_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alwaysDrawnWithCache="true"
                android:cacheColorHint="#00000000"
                android:divider="#cecece"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="false"
                android:fadingEdgeLength="0.0dip"
                android:focusableInTouchMode="true"
                android:scrollbars="none" />

            <com.winhands.extraview.QuickAlphabeticBar
                android:id="@+id/citys_bladeview"
                android:layout_width="30.0dip"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="2dip" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>