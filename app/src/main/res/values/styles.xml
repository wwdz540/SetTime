<resources>
   <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar"></style>

    <style name="MainTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="base_listview_style" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/base_list_scrollbar_handle</item>
        <item name="android:fadingEdgeLength">0.0dip</item>
        <item name="android:alwaysDrawnWithCache">true</item>
        <item name="android:listSelector">@drawable/base_list_selector</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dip</item>
    </style>

    <style name="base_small_progressbar_style">
        <item name="android:maxWidth">18.0dip</item>
        <item name="android:maxHeight">18.0dip</item>
        <item name="android:minWidth">18.0dip</item>
        <item name="android:minHeight">18.0dip</item>
    </style>

    <style name="base_large_progressbar_style">
        <item name="android:maxWidth">38.0dip</item>
        <item name="android:maxHeight">38.0dip</item>
        <item name="android:indeterminateDrawable">@anim/base_loading_large_anim</item>
        <item name="android:minWidth">38.0dip</item>
        <item name="android:minHeight">38.0dip</item>
    </style>

    <style name="title_update_progressbar_style">
        <item name="android:maxWidth">45.0dip</item>
        <item name="android:maxHeight">45.0dip</item>
        <item name="android:indeterminateDrawable">@anim/title_update_anim</item>
        <item name="android:minWidth">45.0dip</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="ActionBarProgressBar" parent="@style/title_update_progressbar_style"></style>
    <!-- 一般性表单控件的外框 -->
    <style name="ex_normal_formfield">
        <item name="android:background">@drawable/ex_normal_formfield_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

 

    <!-- 一般性表单控件的展示右侧图标 -->
    <style name="ex_normal_formfield_imageview">
        <item name="android:layout_width">46.0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/ex_normal_icon_bg</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="test">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="test_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="test_l">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="test_r">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">7.5</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>